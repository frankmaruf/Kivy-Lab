CanvasExample:



<CanvasExample>:
    Button:
        pos: (0,self.height/.5)
        text: "+"
        on_press: root.on_button_plus_x(self)
    Button:
        pos: (700,self.height/.5)
        text: "-"
        on_press: root.on_button_minus(self)
    Button:
        pos: (350,0)
        text: "Poin The Rect"
        on_press: root.on_button_set_on_rectangle(self)
<MainWidget>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s, s
        Ellipse:
            pos:170, self.center_y
            size: s,s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4,100, self.width, 0)
            width: 90

<Exercise1@Widget>:
    canvas:
        Line:
            points: (0,self.height/2,self.width,self.height/2)
            width: 2
        Line:
            points: (self.width/2,0,self.width/2,self.height)
            width: 2

<Exercise2@Widget>:
    canvas:
        Line:
            circle:(200,200,100) #center_x, center_y, radius
            width: 2
        Color:
            rgb:1,0,0
        Line:
            ellipse:(500,300,100,200) #centerx, center_y, radius_x, redius_y
            width: 4
        Color:
            rgb:0,0,1
        Line:
            rectangle: (350,150,100,100) #x, y, w, h
            width: 2

